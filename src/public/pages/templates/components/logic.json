{
    "components": ["app", "clear-button", "delete", "description", "footer-info", "result-details", 
        "result-item", "results-container", "search", "title"],
    "rules": [
        {
            "when": {
                "component": "search",
                "cause": "Search string changed"
            },
            "then": {
                "component": "footer-info",
                "action": "Change search string in footer"
            }
        },
        {
            "when": {
                "component": "search",
                "cause": "Number of results has changed"
            },
            "then": {
                "component": "footer-info",
                "action": "Change number of results in footer"
            }
        },
        {
            "when": {
                "component": "clear-button",
                "cause": "Clear button pressed"
            },
            "then": {
                "component": "search",
                "action": "Clears search string"
            }
        }
    ]
}